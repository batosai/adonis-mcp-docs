{
  "name": "adonis-mcp-docs",
  "version": "0.1.3",
  "description": "MCP server to access adonis-mcp documentation",
  "type": "module",
  "license": "MIT",
  "bin": {
    "adonis-mcp-docs": "./build/bin/mcp.js"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "adonis",
    "adonisjs",
    "documentation",
    "ai",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/batosai/adonis-mcp-docs"
  },
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "postbuild": "test -f .env.example && cp .env.example build/.env || true",
    "prepack": "chmod +x build/bin/mcp.js",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#generated/*": "./.adonisjs/server/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#transformers/*": "./app/transformers/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^8.0.0",
    "@adonisjs/eslint-config": "^3.0.0",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^2.0.0",
    "@japa/assert": "^4.2.0",
    "@japa/plugin-adonisjs": "^5.1.0",
    "@japa/runner": "^5.3.0",
    "@poppinss/ts-exec": "^1.4.4",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.2",
    "hot-hook": "^1.0.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@adonisjs/core": "^7.0.0",
    "@jrmc/adonis-mcp": "^1.0.0-beta.8",
    "reflect-metadata": "^0.2.2"
  },
  "bundledDependencies": {
    "@adonisjs/core": "^6.19.2",
    "@jrmc/adonis-mcp": "^1.0.0-beta.8",
    "reflect-metadata": "^0.2.2"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config",
  "bundleDependencies": [
    "@adonisjs/core",
    "@jrmc/adonis-mcp",
    "reflect-metadata"
  ]
}
